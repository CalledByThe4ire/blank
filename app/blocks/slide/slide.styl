.slide
	position absolute
	top 0
	padding-top 30px
	cursor pointer

	&::before
		position absolute
		top 3px
		left 0
		display flex
		width 3px
		height 25px
		content ''
		background-color $color-primary

	@media $desktop
		&:nth-child(2)
		&:nth-child(3)
			&::before
				height 13px

		&:nth-child(1)
			left 0

		&:nth-child(2)
			left 20%

		&:nth-child(3)
			left 50%

		&:nth-child(4)
			right 0
			left auto

			&::before
				height 0

	&__text
		margin-top 0
		margin-bottom 0
		font-size 15px
		font-weight 700
		line-height 19px

		&--mobile
			display block

		&--desktop
			display none

		&--invisible
			display none

		@media $desktop
			font-size 13px

			&--mobile
				display none

			&--desktop
				display block

