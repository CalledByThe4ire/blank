.text-field
	margin-bottom 2.5rem
	display flex
	flex-direction column
	font-size inherit
	line-height 5.5rem
	color $color-primary

	@media $desktop
		margin-bottom .7rem
		flex-direction row

	&__container
		position relative
		flex-grow 1

		&::after
			position absolute
			left 0
			bottom 0
			width 100%
			content ''
			spriteImage($line__text_field)
			spriteHeight($line__text_field)
			spritePosition($line__text_field)

	&__caption
		position relative
		font-weight 700
		line-height 1rem

		@media $desktop
			top 40px
			margin-right 1.5rem

	&__input
		width 100%
		font-family $font-family--monospace
		font-size 2.2rem
		font-weight 400
		line-height 2.8rem
		background-color transparent
		border none

		@media $desktop
			font-size 3rem
			line-height 3.6rem

		&::placeholder
			color #231f20
			opacity 1
