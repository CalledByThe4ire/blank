.form
	position relative
	padding-top 16rem
	&::before
		position absolute
		top 0
		left 50%
		content ''
		transform translateX(-50%)
		sprite($heading__header)

	&__legend
		margin-right 1.5rem
		margin-bottom 1rem
		font-weight 700

	&__comment
		position relative
		margin 0
		margin-bottom 2rem
		padding-left 2rem
		font-size 1.2rem
		line-height 2.2rem
		&::before
			position absolute
			top 0
			left 0
			font-size 3rem
			font-weight 400
			content '*'
			transform translateY(30%)

	&__container
		display flex
		flex-direction column
		flex-wrap wrap
		margin-bottom 3.5rem

		@media $tab-desk
			margin-bottom 5rem
			flex-direction row

		@media $desktop
			margin-bottom 7.5rem

	&__fieldset
		margin-bottom 30px

		@media $tab-desk
			margin-bottom 4.5rem

		&--additional-info
			display block

			@media $tab-desk
				display flex
